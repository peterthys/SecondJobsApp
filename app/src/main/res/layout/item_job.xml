<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_jobDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Job of : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jobDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="date"
        app:layout_constraintStart_toEndOf="@+id/tv_jobDate1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jobClient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Client : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobDate1" />

    <TextView
        android:id="@+id/tv_jobClient2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="client"
        app:layout_constraintStart_toEndOf="@+id/tv_jobClient1"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobDate1" />

    <TextView
        android:id="@+id/tv_jobStart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="start time : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobClient1" />

    <TextView
        android:id="@+id/tv_jobStart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="start"
        app:layout_constraintStart_toEndOf="@+id/tv_jobStart1"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobClient1" />

    <TextView
        android:id="@+id/tv_jobEnd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="till : "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_jobStart2"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobClient1" />

    <TextView
        android:id="@+id/tv_jobEnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:hint="end"
        app:layout_constraintStart_toEndOf="@+id/tv_jobEnd1"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobClient2" />

    <TextView
        android:id="@+id/tv_jobPause1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="pause : "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobStart1" />

    <TextView
        android:id="@+id/tv_jobPause2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="pause"
        app:layout_constraintStart_toEndOf="@+id/tv_jobPause1"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobStart1" />

    <TextView
        android:id="@+id/tv_jobResult1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="This job lastet for :"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobPause1" />

    <TextView
        android:id="@+id/tv_jobResult2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
       android:hint="result"
        app:layout_constraintStart_toEndOf="@+id/tv_jobResult1"
        app:layout_constraintTop_toBottomOf="@+id/tv_jobPause1" />
</androidx.constraintlayout.widget.ConstraintLayout>